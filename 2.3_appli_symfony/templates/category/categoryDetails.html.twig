{% extends 'base.html.twig' %}

{% block title %}Détails catégorie{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-9">
                <div class="row">
                    <div class="col-12 pt-5 d-flex justify-content-between align-items-center">
                        <h2>{{ category.name }}</h2>
                        <div class="d-flex">
                            {% if (is_granted('ROLE_ADMIN')) %}
                                <a href="{{ path('app_category_edit', {'id' : category.id}) }}"
                                   class="btn outline-btn w-100">ÉDITER</a>
                                <a href="{{ path('app_category_delete', {'id' : category.id}) }}"
                                   class="btn solid-btn danger w-100 ms-3">SUPPRIMER</a>
                            {% endif %}
                            <a href="{{ path('app_category') }}" class="btn solid-btn w-100 ms-3">Retour</a>
                        </div>
                    </div>
                    <div class="col-12 pb-3">
                        <p>Les musiques</p>
                    </div>
                    {% for music in category.musics %}
                        <div class="col-12 mb-3">
                            <a href="{{ path('app_music_details', {'id' : music.id}) }}" class="music-card bordered">
                                <h2 class="music-title">{{ music.title }}</h2>
                                <p class="music-author">{{ music.author.nickname }}</p>
                                <p class="music-category">{{ music.categories | join(', ') }}</p>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-12 col-lg-3">
                {#                todo reserved for stats #}
            </div>
        </div>
    </div>
{% endblock %}

